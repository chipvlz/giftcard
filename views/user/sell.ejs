<%- partial ('navbar.ejs') %>

<div class="container" id="user-page">
  <div class="sidenav">
    <%- partial ('menu-side.ejs') %>
  </div>
  <div class="main-content">
    <h3>Sell Gift Card</h3>

    <div class="panel panel-default">
      <div class="panel-heading panel-blue">List Gift Card </div>
      <div class="panel-body table-responsive list-table" id="list-card">
        <table class="table table-hover" id="list-giftcard">
          <thead>
          <tr>
            <th class="">ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Type</th>
            <th>Action</th>

          </tr>
          </thead>
          <tbody>
          <% _.each(foundGiftcard, function(card) { %>
          <tr>
            <td class=" td-id"><%= card.id %></td>
            <td class="card-image"><img src="<%= card.thumbnail %>"></td>
            <td class="card-name"><%= card.name %></td>
            <td class="card-type"><%= card.type.name %></td>
            <td><a href="/user/sell?id=<%= card.id %>&type=<%= card.name %>"><i class="fa fa-hand-pointer-o"></i></a></td>
          </tr>
          <% }) %>

          </tbody>
        </table>
      </div>
    </div>

    <div class="panel panel-default">

      <div class="panel-body">
        <form id="sell-giftcard-form">
          <div class="form-group">
            <label for="cid">Gift Card Type</label>
            <input type="text" class="sr-only" name="owner" id="owner" value="<%= req.session.user.id %>">
            <input type="text" class="sr-only" name="cid" id="cid">
            <input type="text" class="form-control" name="name" id="giftcard">
          </div>
          <div class="form-group">
            <label for="code">Gift Code</label>
            <input type="text" class="form-control" name="code" id="code">
          </div>
          <div class="form-group">
            <label for="value">Value</label>
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-dollar fa-fw"></i></span>
              <input class="form-control" type="text" name="value" id="value">
            </div>
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-dollar fa-fw"></i></span>
              <input class="form-control" type="text" name="price" id="price">
            </div>
          </div>
          <div class="form-group">
            <label for="save">Save Up</label>
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-percent fa-fw"></i></span>
              <input class="form-control" type="text" name="save" id="save">
            </div>
          </div>

          <hr>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>



    </div>
  </div>
