<div class="col-sm-3 col-md-3 hidden-xs">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Filter by price
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
            <i class="fa fa-chevron-circle-down pull-right"></i></a>

        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse in">
        <div class="panel-body">
          <ul class="list-group">
            <a href="/giftcard/filter?by=price&price=d25under"><li class="list-group-item">$25 and Under</li></a>
            <a href="/giftcard/filter?by=price&price=d25d50"><li class="list-group-item">$25 - $50</li></a>
            <a href="/giftcard/filter?by=price&price=d50d100"><li class="list-group-item">$50 - $100</li></a>
            <a href="/giftcard/filter?by=price&price=d100d250"><li class="list-group-item">$100 - $250</li></a>
            <a href="/giftcard/filter?by=price&price=d250d500"><li class="list-group-item">$250 - $500</li></a>
            <a href="/giftcard/filter?by=price&price=d500plus"><li class="list-group-item">$500+</li></a>
          </ul>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Card type
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
            <i class="fa fa-chevron-circle-down pull-right"></i></a>
        </h4>
      </div>
      <div id="collapse2" class="panel-collapse collapse">
        <div class="panel-body">
          <ul class="list-group">
            <% _.each(foundType, function(type) { %>
            <a href="/giftcard/filter?by=type&type=<%= type.id %>"><li class="list-group-item"><%= type.name %></li></a>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Category
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
            <i class="fa fa-chevron-circle-down pull-right"></i></a>
        </h4>
      </div>
      <div id="collapse3" class="panel-collapse collapse">
        <div class="panel-body"></div>
      </div>
    </div>
  </div>




</div>
  <div class="col-sm-9 col-md-9" style="background:#fff;padding:20px 0;">
        <div class="row col-title">
          <h3>Buy Gift Cards <a href=""><i class="fa fa-info-circle"></i></a>
            <div class="btn-group pull-right">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Sort by Name <span class="caret"></span></button>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Newest</a></li>
                <li><a href="#">Latest</a></li>

              </ul>
            </div>

          </h3>
        </div><hr>

        <div class="col-allbrand">
          <% if (foundCard.length > 0) { %>
          <% _.each(foundCard, function(card) { %>
          <a href="/giftcard/view/<%= card.id %>">
          <div class="col-onebrand col-md-3 col-sm-4 col-xs-6">
            <img src="<%= card.thumbnail %>" class="img-responsive" style="width:100%">
            <p class="namegc"><%= card.name %> Gift Cards</p>
            <p class="savemoney">Save up to <%= card.save %>%</p>
          </div>
          </a>
          <% }) } %>

        </div>





</div>
</div>
