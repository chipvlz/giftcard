<%- partial ('../common/navbar.ejs') %>
<div id="cart-page">
  <% if (req.session.user_id) { %>
  <div class="find-email alert alert-success">
    <strong>Notice!</strong> We'll send gift card code to email <span class="set-email"><%= req.session.user.email %></span>.
  </div>
  <% } else { %>
  <div class="find-email alert alert-warning">
    <strong>Warning!</strong> Please Log in your account before checkout for sending code to.<a href="/login"> [Log in]</a><span class="sr-only set-email">no-email</span>.
  </div>
  <!-- Modal -->
  <div class="modal fade" id="setEmailModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header panel-red">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">WARNING!</h4>
        </div>
        <div class="modal-body">
          <p>Please Log in your account before checkout for sending code to.</p>
          <!--<input type="email" class="form-control input-lg" id="enter-email">-->
        </div>
        <div class="modal-footer">
          <!--<button type="button" class="enter-email btn btn-primary">Enter Email</button>-->
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <div class="container">
    <div class="col-sm-8">
      <h2>Your Cart (2 Items)</h2>
      <table class="table table-responsive table-hover">

        <tbody>
        <% _.each(foundCart, function(cart) { %>
        <tr class="tr-cart" id="cart-<%= cart.id %>">
          <td class="cart-id sr-only"><%= cart.id %></td>
          <td class="product-id sr-only"><%= cart.pid %></td>
          <td class="card-img col-md-1 hidden-xs"><img style="max-width:80px" src="<%= cart.image %>"></td>
          <td class="card-name"><%= cart.name %></td>

          <td class="card-type"><%= cart.type %></td>
          <td class="product-value">$<%= cart.value %></td>
          <td class="product-save col-md-3"><%= cart.save %>%</td>
          <td class="product-price">$<%= cart.price %></td>
          <td class="col-md-1">
            <a class="remove-item btn btn-danger" href="#">
              <i class="fa fa-trash-o fa-lg"></i> Remove</a>
            <a class="sr-only reloading btn btn-warning" href="#">
              <i class="fa fa-spinner fa-pulse"></i> Removing...</a>

          </td>
        </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-4" style="border:1px solid #ccc">
      <h3>Summary</h3>
      <table>
        <tbody>
        <tr>
          <td>Subtotal</td>
          <td></td>
        </tr>
        <tr>
          <td>Tax</td>
          <td></td>
        </tr>
        <tr>
          <td>Shipping</td>
          <td></td>
        </tr>
        </tbody>
        <tfoot>
        <tr>
          <td>Total</td>
          <td></td>
        </tr>
        <tr>
          <td>Your savings</td>
          <td></td>
        </tr>
        </tfoot>
      </table>
      <div class="text-center">
        <button class="btn btn-default proceed-btn" ui-sref="checkOut" href="/checkout"><span class="icon-lock"></span> Proceed to checkout</button>
      </div>
    </div>
  </div>

<div class="panel panel-success">
  <div class="panel-heading panel-green"><i class="fa fa-shopping-cart fa-lg"></i> Your shopping cart</div>
  <div class="panel-body">
    <hr>
    <div class="total panel-body">TOTAL: $<strong></strong></div>
  </div>

  <div class="panel-footer">
    <button onclick="goBack()" type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Continue Shopping</button>
    <a href="#" type="button" class="next-process btn btn-success"><i class="fa fa-share-square-o"></i><i class="sr-only fa fa-spinner fa-pulse"></i> Next Process</a>

  </div>
</div>
</div>
