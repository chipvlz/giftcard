<div class="sr-only se-pre-con"></div>
<div class="test-test"></div>
<div id="checkout-page">

  <div class="container">
    <div class="checkout-left col-sm-7">
      <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#"><i class="fa fa-shopping-basket"></i> View cart</a></li>
        <li>Customer information</li>
      </ol>


      <form class="form-label form-css-label form-horizontal center-block" style="max-width:550px;">
        <div class="form-section customer-information">
          <div class="form-group">
            <label class="col-sm-12"><h4>Customer information <span class="pull-right" style="font-size:14px;">Already have an account? <a href="#">Log in</a></span></h4> </label>
            <div class="col-sm-12">
              <fieldset>
              <input type="email" class="input-lg form-control" id="email">
                <label for="email">Email</label>
              </fieldset>
            </div>
            <div class="col-sm-12 checkbox">
              <label><input type="checkbox"> Subscribe to our newsletter</label>
            </div>
          </div>
        </div>

        <div class="payment-information">
          <h4>Payment Information</h4>
          <p>This is a secure 128-bit SSL Encrypted payment. You're safe</p>
          <div class="form-group">
            <div class="col-sm-12"><fieldset>
                <input type="text" class="input-lg form-control" id="cardnumber">
                <label for="cardnumber">Card Number</label>
              </fieldset></div>

          </div>
          <div class="card-security col-sm-12">
            <div class="form-group">
              <label for="expiry" class="col-sm-4 control-label">Expiration date:</label>
              <div class="col-sm-8"><input type="month" class="input-lg form-control" id="expiry"></div>
            </div>
            <div class="form-group">
              <label for="cvv" class="col-sm-4 control-label">Security Code:</label>
              <div class="col-sm-8"><input type="number" class="input-lg form-control" id="cvv"></div>
            </div>
          </div>
        </div><hr>

        <div class="form-section billing-address">
          <div class="form-group">
            <label class="col-xs-12"><h4>Billing address</h4></label>
            <div class="col-xs-6 input-left">
            <fieldset>
              <input type="text" class="input-lg form-control" id="firstname">
              <label for="firstname">First Name</label>
            </fieldset>
            </div>
            <div class="col-xs-6 input-right">
              <fieldset>
                <input type="text" class="input-lg form-control" id="lastname">
                <label for="lastname">Last name</label>
              </fieldset>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <fieldset>
              <input type="text" class="input-lg form-control" id="address">
                <label for="address">Address</label>
              </fieldset>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-7 col-xs-6 input-left">
              <fieldset>
              <input type="text" class="input-lg form-control" id="city">
              <label for="city">City</label>
              </fieldset>
            </div>
            <div class="col-sm-5 col-xs-6 input-right" style="padding-left: 4px;">
              <fieldset>
                <input type="text" class="input-lg form-control" id="state">
                <label for="state">State</label>
              </fieldset>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-6 input-left">
              <fieldset>
              <input type="text" class="input-lg form-control" id="country">
              <label for="country">Country</label>
              </fieldset>
            </div>
            <div class="col-xs-6 input-right">
              <fieldset>
              <input type="text" class="input-lg form-control" id="postalcode">
              <label for="postalcode">Postal code</label>
              </fieldset>
            </div>
          </div>
        </div>


      <div class="checkout-button">
        <div class="form-group">
          <div class="col-sm-12">
            <a onclick="goBack()" type="button" class="btn-lg btn btn-link"><i class="fa fa-angle-left"></i> Return to cart</a>
            <a type="submit" class="btn btn-lg btn-checkout-page">Complete order</a>
          </div>
        </div>
      </div>
      </form>



    </div>
    <div class="checkout-right col-sm-5">
      <div class="detail-content">
      <% _.each(foundCart, function(cart) { %>
      <!-- Left-aligned -->
      <div class="media">
        <span class="sr-only have-cart co-cart-pid"><%= cart.pid %></span>
        <div class="media-left">
          <img src="<%= cart.image %>" class="media-object img-rounded" style="width:80px">
        </div>
        <div class="media-body">
          <h4 class="media-heading co-cart-name"><%= cart.name %></h4>
          <p>$<%= cart.value %> - <%= cart.value %>% off</p>
        </div>
        <div class="media-right">
          <h4 class="co-cart-price">$<%= cart.price %></h4>
        </div>
      </div>
      <% }) %>
      <table class="table table-responsive">
        <tbody>
        <tr>
          <td>Subtotal</td>
          <td class="calsum td-subtotal text-right"></td>
        </tr>
        <tr>
          <td>Tax</td>
          <td class="calsum td-tax text-right">$0.00</td>
        </tr>
        <tr>
          <td>Shipping</td>
          <td class="calsum td-shipping text-right">$0.00</td>
        </tr>
        </tbody>
        <tfoot>
        <tr class="tr-total">
          <td>Total</td>
          <td class="td-total text-right"></td>
        </tr>

        </tfoot>
      </table>
    </div>
    </div>
  </div>
</div>
