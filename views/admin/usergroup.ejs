<%- partial ('navbar.ejs') %>

<div class="container" id="admin-page">
  <div class="sidenav">
    <%- partial ('menu-side.ejs') %>
  </div>
  <div class="main-content">

    <h3>User Group
      <a href="#" data-toggle="collapse" data-target="#add-new"><span class="pull-right"><i class="fa fa-plus-circle"></i> Add New</span></a>
    </h3>

    <div id="add-new" class="collapse panel panel-default">
      <div class="panel-heading">Add New Group</div>
      <div class="panel-body">
        <form class="form-horizontal center-block" id="add-new-group">
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="name" placeholder="Enter group name">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Permission</label>
            <div class="col-sm-10">
            <div class="checkbox">
              <label><input type="checkbox" name="admin" value="1">is Admin</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="seller" value="1">is Seller</label>
            </div>

          </div>
            </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Add New</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">List Group </div>
      <div class="panel-body table-responsive list-table" id="list-type">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
          </thead>
          <tbody>
          <% _.each(foundUsergroup, function(group) { %>
          <tr>
            <td class="td-id"><%= group.id %></td>
            <td class="type-name"><%= group.name %></td>
            <td><a href="#" data-toggle="modal" data-target="#editTypeModal"><i class="fa fa-pencil-square-o"></i></a></td>
            <td><a href="#" data-toggle="modal" data-target="#delTypeModal"><i class="fa fa-trash-o"></i></a></td>

          </tr>
          <% }) %>

          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>


<!--// Modal Del Type-->
<div class="modal fade" id="delGroupModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="fa fa-remove fa-sm"></i> DELETE GROUP</h4>
      </div>
      <div class="modal-body">
        <p>Are you ready to delete this group ?</p>
        <form class="form-horizontal" id="del-group-form">
          <input type="text" class="sr-only" name="id" value="">
          <div class="form-group">
            <div class="col-sm-12 text-right">
              <button type="submit" class="btn btn-danger"><i class="fa fa-remove fa-sm"></i> Delete</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--// Modal Edit Type-->
<div class="modal fade" id="editGroupModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="fa fa-remove fa-sm"></i> EDIT GROUP</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal center-block" id="edit-group-form">
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name</label>
            <div class="col-sm-10">
              <input type="text" class="sr-only" name="id" value="">
              <input type="text" class="form-control" name="name" id="name" placeholder="Enter type name">
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Edit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
