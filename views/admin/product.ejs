<%- partial ('navbar.ejs') %>

<div class="container" id="admin-page">
  <div class="sidenav">
    <%- partial ('menu-side.ejs') %>
  </div>
  <div class="main-content">

    <h3>Products
      <a href="#" data-toggle="collapse" data-target="#add-new"><span class="pull-right"><i class="fa fa-plus-circle"></i> Add New</span></a>
    </h3>

    <div id="add-new" class="collapse panel panel-default">
      <div class="panel-heading">Add New Product</div>
      <div class="panel-body">
        <form class="form-horizontal center-block" id="add-new-type">
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="name" placeholder="Enter type name">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="description">Description</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="description" id="description" placeholder="Enter description">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Add New</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">List Product </div>
      <div class="panel-body table-responsive list-table" id="list-type">
        <table class="table table-hover">
          <thead>
          <tr>
            <th class="sr-only">ID</th>
            <th>Gift Card</th>
            <th>Gift Code</th>
            <th>Value</th>
            <th>Price</th>
            <th>Seller</th>
            <th>Action</th>

          </tr>
          </thead>
          <tbody>
          <% _.each(foundProduct, function(product) { %>
          <tr>
            <td class="sr-only td-id"><%= product.id %></td>
            <td class="type-name"><%= product.cid.name %></td>
            <td class="type-name"><%= product.code %></td>
            <td class="type-name"><%= product.value %></td>
            <td class="type-name"><%= product.price %></td>
            <td class="type-name"><%= product.owner.name %></td>
            <td>
              <a href="#" data-toggle="modal" data-target="#editTypeModal"><i class="fa fa-pencil-square-o"></i></a>
              <a href="#" data-toggle="modal" data-target="#delTypeModal"><i class="fa fa-trash-o"></i></a>
            </td>


          </tr>
          <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>


<!--// Modal Del Type-->
<div class="modal fade" id="delTypeModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="fa fa-remove fa-sm"></i> DELETE TYPE</h4>
      </div>
      <div class="modal-body">
        <p>Are you ready to delete this type ?</p>
        <form class="form-horizontal" id="del-type-form">
          <input type="text" class="sr-only" name="id" value="">
          <div class="form-group">
            <div class="col-sm-12 text-right">
              <button type="submit" class="btn btn-danger"><i class="fa fa-remove fa-sm"></i> Delete</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
