<%- partial ('navbar.ejs') %>

<div class="container" id="admin-page">
  <div class="sidenav">
    <%- partial ('menu-side.ejs') %>
  </div>
  <div class="main-content">
    <h5>User Dashboard</h5>
    <div class="col-sm-6 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><%= foundUser.name %></div>
        <div class="panel-body"><i class="fa fa-envelope fa-fw" aria-hidden="true"></i>&nbsp; <%= foundUser.email %></div>
        <div class="panel-body"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i>&nbsp; <%= foundUser.birthday %></div>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class="well">
        <h3><i class="fa fa-calendar fa-fw" aria-hidden="true"></i>&nbsp; Balance</h3>
        <p class="user-balance"><h2>$<%= foundUser.balance %></h2></p>
      </div>
    </div>
    <div class="col-sm-12">
      <table style="background: #fff" class="table table-hover">
        <thead>
        <tr>
          <th class="sr-only">ID</th>
          <th>Gift Card</th>
          <th>Gift Code</th>
          <th>Value</th>
          <th>Price</th>
          <th>Status</th>

        </tr>
        </thead>
        <tbody>
        <% _.each(foundUser.products, function(product) { %>
        <tr>
          <td class="sr-only td-id"><%= product.id %></td>
          <td class="gc-name"><%= product.name %></td>
          <td class="gift-code"><%= product.code %></td>
          <td class="product-value"><%= product.value %></td>
          <td class="product-price"><%= product.price %></td>
          <td class="product-status"><%= product.status %></td>
        </tr>
        <% }) %>
        </tbody>
        <tfoot><tr><td colspan="6">TOTAL</td></tr></tfoot>
      </table>
    </div>
  </div>
</div>
